<h1>Редактирование предложения</h1>

<%= form_for(@car,:html => {multipart: true ,:class => "form-horizontal"}) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="region">Регион:</label>
      <div class="col-sm-4">
        <%= f.select :region, options_for_select(Region.all.collect {|region| [region.name]}, @car.region),{:include_blank => "Выберите регион..."},{class: "form-control input-sm" } %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="city">Город:</label>
      <div class="col-sm-4">
        <%= f.select :city, options_for_select([@car.city],@car.city),{:include_blank => "Выберите город..."},{class: "form-control input-sm"} %>
      </div>
    </div>

    <div class="form-group" >
      <label class="col-sm-2 control-label" for="car_brand" >Марка:</label>
      <div class="col-sm-4">
        <p class: "form-control input-sm"><%= @car.brand %></p>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_model" >Модель:</label>
      <div class="col-sm-4">
        <p class: "form-control input-sm"><%= @car.model %></p>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_engine">Тип двигателя:</label>
      <div class="col-sm-4">
        <%= f.select :engine,options_for_select(["Бензин","Дизель","Гибрид","Электро","Газ"], selected: @car.engine),{},{class: "form-control input-sm"} %> 
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_cuzov">Тип кузова:</label>
      <div class="col-sm-4">
        <%= f.select :cuzov, options_for_select(["Седан","Хетчбэк","Универсал","Минивэн","Пикап", "Фургон","Микроавтобус","Внедорожник","Кабриолет",
              "Кроссовер","Купе"], selected: @car.cuzov),{},{class: "form-control input-sm"} %>
      </div>
    </div>    

    <div class="form-group">
      <label class="col-sm-2 control-label" for="probeg">VIN-код:</label>
      <div class="col-sm-4">
        <%= f.text_field :vin_code, class: "form-control input-sm " %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="probeg">Пробег</label>
      <div class="col-sm-4">
        <%= f.text_field :probeg, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_kpp">Коробка:</label>
      <div class="col-sm-4">
        <%= f.select :kpp, options_for_select(["Автомат","Механика","Вариатор","Робот"], selected: @car.kpp),{},{class: "form-control input-sm"} %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_engv">Объем</label>
      <div class="col-sm-4">
        <%= f.text_field :engv, class: "form-control input-sm"%>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_privod">Привод:</label>
      <div class="col-sm-4">
        <%= f.select :privod, options_for_select(["Передний","Задний","Полный"], selected: @car.privod),{},{class: "form-control input-sm"} %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_year">Год выпуска</label>
      <div class="col-sm-4">
        <%= f.text_field :year, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="car_sost" >Состояние:</label>
      <div class="col-sm-4">
        <%= f.select :sost, options_for_select(["Отличное","Хорошее","Удовлетворительное","Плохое"], selected: @car.sost),{},{class: "form-control input-sm"} %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="photo">Фото</label>
      <div class="col-sm-4">
        <%= file_field_tag "images[]", type: :file, multiple: true %>
      </div>
    </div>


    <div class="form-group">
      <label class="col-sm-2 control-label" for="offer_desc">Описание</label>
      <div class="col-sm-6">
        <%= f.text_area :desc, class: "form-control", cols: 50, rows: 7  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label" for="price">Цена:</label>
      <div class="col-sm-4">
        <%= f.text_field :price, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Создать", class: "btn btn-primary"%>
        <%= link_to 'Закрыть', @car, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger" %>
        <a href="<%= cars_path %>" class="btn btn-default">Назад</a>
      </div>
    </div>
  </fieldset>
<% end %>
