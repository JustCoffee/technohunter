<%= form_for(@equip, :url => new_equip_path, html: { multipart: true, :class => "form-horizontal" }) do |f| %>
  <% if @equip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equip.errors.count, "error") %> prohibited this equip from being saved:</h2>

      <ul>
      <% @equip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>  

    <div class="form-group">
      <label class="col-sm-3 control-label" for="region">Регион:</label>
      <div class="col-sm-4">
        <%= f.select :region, options_for_select(Region.all.collect {|region| [region.name]},0),{:include_blank => "Выберите регион..."}, {class: "form-control input-sm", type: "text"} %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label" for="city">Город:</label>
      <div class="col-sm-4">
        <%= f.select :city, options_for_select({},0),{:include_blank => "Выберите город..."}, {class: "form-control input-sm", type: "text"} %>
      </div>
    </div>


    <div class="form-group">
      <label class="col-sm-3 control-label" for="car_type">Тип</label>
      <div class="col-sm-4">
        <%= f.select :equip_type, {},{:include_blank => "Выберите тип..."},{class: "form-control input-sm"} do %>
          <% ["Промышленное","Пищевое","Торговое","Other..."].each do |x| -%>
              <%= content_tag(:option, x) %>
          <% end %>
        <% end %>
      </div>
    </div>


    <div id="other_brand">
      <div class="form-group">
        <label class="col-sm-3 control-label">Введите марку:</label>
        <div class="col-sm-4">
          <input name="other_brand[]" class="form-control input-sm"></input>
        </div>
      </div>
    </div>

    <div id="other_model">
      <div class="form-group">
        <label class="col-sm-3 control-label">Введите модель:</label>
        <div class="col-sm-4">
          <input name="other_model[]" class="form-control input-sm"></input>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Год выпуска</label>
      <div class="col-sm-4">
        <%= f.number_field :year, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label" for="probeg">VIN/Заводской номер:</label>
      <div class="col-sm-4">
        <%= f.text_field :vin_code, class: "form-control input-sm " %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Наработка(часов)</label>
      <div class="col-sm-4">
        <%= f.number_field :hofuse, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Состояние</label>
      <div class="col-sm-4">
        <%= f.select :status, {},{},{class: "form-control input-sm"} do %>
          <% ["Отличное","Хорошее","Удовлетворительное","Плохое"].each do |x| -%>
            <%= content_tag(:option, x) %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label" for="photo">Фото</label>
      <div class="col-sm-4">
        <%= file_field_tag "images[]", type: :file, multiple: true %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label" for="offer_desc">Описание</label>
      <div class="col-sm-4">
        <%= f.text_area :desc, class: "form-control", cols: 50, rows: 7  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label" for="price">Цена:</label>
      <div class="col-sm-4">
        <%= f.text_field :price, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 col-lg-offset-2">
        <%= f.submit "Создать", class: "btn btn-primary"%>
        <a href="<%= equips_path %>" class="btn btn-default">Назад</a>
      </div>
    </div>
  </fieldset>
<% end %>
