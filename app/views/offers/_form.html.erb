<%= form_for(@offer, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Создание объявления</legend>

    <div class="form-group">
      <label class="col-lg-2 control-label" for="offer_title">Компания</label>
      <div class="col-lg-10">
        <%= f.text_field :title, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label" for="offer_desc">Описание</label>
      <div class="col-lg-10">
        <%= f.text_area :desc, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label" for="offer_city">Город</label>
      <div class="col-lg-10">
        <%= f.text_field :city, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label" for="offer_tel">Телефон</label>
      <div class="col-lg-10">
        <%= f.text_field :tel, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Создать", class: "btn btn-primary"%>
        <a href="<%= offers_path %>" class="btn btn-default">Назад</a>
      </div>
    </div>
  </fieldset>
<% end %>