<h1>Ваши предложения:</h1>
<p>В легковых авто:</p>
<table class="table table-striped table-hover ">
  <thead>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
     <!-- Обеспечение клика по строке -->
      <tr onclick="window.location = '../cars/<%= car.id %>'" width>
        <% if car.pictures.first %>
          <td width="200px"><%= image_tag car.pictures.first.image.url(:small) %></td>
          <% else %>
            <td>НЕТ ФОТО</td>
        <% end %>
        <td><strong><%= car.brand %> <%= car.model %>, <%= car.year %><br></strong>
                    <%= car.price %> руб.<br><br>
                    <%= car.region %>, <%= car.city %><br><br>
                    Объявление создано:<br>
                    <%= car.created_at %>
        </td>
        <% if car.offer_status == 1 %>
          <td class="text-warning">На модерации</td>
          <% else %>
            <% if car.offer_status == 2 %>
              <td class="text-success">Активно</td>
              <% else %>
                <td class="text-danger">Закрыто</td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

